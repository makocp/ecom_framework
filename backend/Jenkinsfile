pipeline {
    agent any
    stages {

        stage("Install dependencies"){
            steps{
                dir('backend') { // Change to backend directory
                    sh 'npm install'
                }
            }
        }

        stage("Build App"){
            steps {
                dir('backend') { // Change to backend directory
                    // Only for demo purposes, to "build". With npm start -> build runs infinite.
                    sh 'npm run build'
                }
            }
        }

        stage("Build Image"){
            steps{
                dir('backend') { // Change to backend directory
                    sh 'docker build -t e-com-backend:$BUILD_NUMBER .'               
                }
            }
        }

        stage("Docker Push"){
            steps {
                sh 'docker login -u $DOCKERHUB_USERNAME -p $DOCKERHUB_PASSWORD'
                sh 'docker tag e-com-backend:$BUILD_NUMBER makocp/e-com-backend:$BUILD_NUMBER'
                sh 'docker push makocp/e-com-backend:$BUILD_NUMBER'
                sh 'docker logout'
            }
        }

        stage("Deploy to GKE"){
            steps {
                sh 'gcloud container clusters get-credentials ecom-backend-cluster --zone us-central1-a --project e-com-project-408719'
                sh "kubectl create deployment e-com-backend:$BUILD_NUMBER --image=makocp/e-com-backend:$BUILD_NUMBER --port=4242"
                sh "kubectl expose deployment e-com-backend:$BUILD_NUMBER --name=ecom-backend-service --type=LoadBalancer --port=4242"
            }
        }
    }
}

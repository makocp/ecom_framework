pipeline {
    agent any
    stages {

        stage("Install dependencies"){
            steps{
                dir('backend') { // Change to backend directory
                    sh 'npm install'
                }
            }
        }

        stage("Build App"){
            steps {
                dir('backend') { // Change to backend directory
                    // Only for demo purposes, to "build". With npm start -> build runs infinite.
                    sh 'npm run build'
                }
            }
        }

        stage("Build Image"){
            steps{
                dir('backend') { // Change to backend directory
                    sh 'docker build -t e-com-backend .'                    
                }
            }
        }

        stage("Docker Push"){
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker_cred', passwordVariable: 'DOCKERHUB_PASSWORD', usernameVariable: 'DOCKERHUB_USERNAME')]) {
                    sh 'docker login -u $DOCKERHUB_USERNAME -p $DOCKERHUB_PASSWORD'
                    sh 'docker tag e-com-backend makocp/e-com-backend'
                    sh 'docker push makocp/e-com-backend'
                    sh 'docker logout'
                }
            }
        }
    }
}
